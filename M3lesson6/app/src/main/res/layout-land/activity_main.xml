<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <fragment
        android:id="@+id/fragment_buttons"
        android:name="com.example.m3lesson6.ButtonsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_buttons"/>

    <fragment
        android:id="@+id/fragment_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.m3lesson6.CheckBoxFragment"
        tools:layout="@layout/fragment_check_box"/>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.m3lesson6.ImageFragment"
        tools:layout="@layout/fragment_image"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>